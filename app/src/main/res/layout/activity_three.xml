<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g"
    tools:context=".three">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            tools:context=".studentinfo">

            <TextView
                android:id="@+id/headhhhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Student Information"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="114dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/enternameee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Enter the name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/roooll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="110dp"
                    android:text="Roll no"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/enterroooll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext"

                    android:padding="10dp"
                    android:textSize="25sp"

                    android:layout_weight="1"
                    android:drawableLeft="@drawable/baseline_123_24"
                    android:ems="10"
                    android:hint="Enter the rollno"
                    android:inputType="text"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/modeeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="113dp"
                    android:text="Mode"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/entermodeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/baseline_model_training_24"
                    android:hint="Online/Offline"
                    android:inputType="text"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                   android:id="@+id/urll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="125dp"
                    android:text="URL"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                   android:id="@+id/enterurlll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:linksClickable="true"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/baseline_add_link_24"

                    android:drawablePadding="10dp"
                    android:ems="10"

                    android:hint="Enter the URL"
                    android:inputType="text"

                    android:padding="10dp"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                android:id="@+id/seccc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="Section"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                  android:id="@+id/enterseccc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext"

                    android:padding="10dp"
                    android:drawableLeft="@drawable/baseline_class_24"
                    android:layout_marginLeft="5dp"
                    android:hint="Enter the section"
                    android:inputType="text"

                    android:textSize="25sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/proooj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="Project"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                  android:id="@+id/enterproooj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"

                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/baseline_mobile_friendly_24"
                    android:drawablePadding="10dp"

                    android:ems="10"
                    android:hint="Enter project name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/technog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Technology"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                   android:id="@+id/entertech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext"

                    android:padding="10dp"
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/baseline_lightbulb_24"
                    android:ems="10"
                    android:hint="Enter the technology"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                  android:id="@+id/organ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="Organisation"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                   android:id="@+id/enterorg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:drawableLeft="@drawable/baseline_place_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Enter org. name"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

