<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g"
    android:orientation="vertical"
    tools:context=".student_signup">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:text="SIGN UP"

        android:textColor="@color/material_on_background_emphasis_high_type"
        android:textSize="36sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="14dp"
        android:text="Name"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/entername"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Enter the name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/rollno"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:text="Roll No"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/enterrolno"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/baseline_123_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Enter the roll no"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text=""
        android:textSize="27sp" />

    <TextView
        android:id="@+id/mailid"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:text="Mail-ID"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/entermail"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/baseline_mail_outline_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="abc@gmail.com"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/pswd"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textSize="27sp" />


    <EditText
        android:id="@+id/enter"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"

        android:background="@drawable/edittext"
        android:drawableStart="@drawable/baseline_password_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/shouldbe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password should be:"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="20dp"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/character"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/baseline_check_box_24"
        android:drawablePadding="10dp"
        android:text="Atleast 8 character"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/baseline_check_box_24"
        android:drawablePadding="10dp"
        android:text="Minimum one uppercase"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/lower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/baseline_check_box_24"
        android:drawablePadding="10dp"
        android:text="Minimum one lowercase"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/baseline_check_box_24"
        android:drawablePadding="10dp"
        android:text="Minimum one number"
        android:textSize="22sp" />




    <Button
        android:id="@+id/submit"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:text="SIGN-UP"
        android:typeface="monospace"
        android:textColor="@color/black"
        android:textSize="27sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"

            android:layout_marginBottom="19dp"
            android:text="Already have an account"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>
</ScrollView>